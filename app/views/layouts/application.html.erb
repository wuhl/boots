<!DOCTYPE html>
<html>
  <head>
    <title>Boots</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'bootstrap', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/menu' %>
    <div class='container'>
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>
